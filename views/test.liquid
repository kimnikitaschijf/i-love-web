<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Stacked Scroll Foto's</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }

    html, body {
      height: 100%;
      overflow-x: hidden;
      scroll-behavior: smooth;
      background: #f0f0f0;
    }

    .scroll-wrapper {
      height: 400vh; /* 1 foto per 100vh scroll */
      position: relative;
    }

    .photo-stack {
      position: sticky;
      top: 50%;
      transform: translateY(-50%);
      width: 200px;
      height: 260px;
      margin: 0 auto;
    }

    .photo {
      width: 180px;
      height: 230px;
      background: white;
      border: 4px solid #888;
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
      transform: scale(0.9);
    }

    .photo-1 { z-index: 1; transform: rotate(-12deg); }
    .photo-2 { z-index: 2; transform: rotate(4deg); }
    .photo-3 { z-index: 3; transform: rotate(-5deg); }
    .photo-4 { z-index: 4; transform: rotate(10deg); }
  </style>
</head>
<body>

  <div class="scroll-wrapper">
    <div class="photo-stack">
      <div class="photo photo-1"></div>
      <div class="photo photo-2"></div>
      <div class="photo photo-3"></div>
      <div class="photo photo-4"></div>
    </div>
  </div>

  <!-- GSAP + ScrollTrigger -->
  <script src="https://unpkg.com/gsap@3/dist/gsap.min.js"></script>
  <script src="https://unpkg.com/gsap@3/dist/ScrollTrigger.min.js"></script>
  <script>
    gsap.registerPlugin(ScrollTrigger);

    const photos = gsap.utils.toArray(".photo");

    photos.forEach((photo, i) => {
      gsap.to(photo, {
        opacity: 1,
        scale: 1,
        duration: 0.5,
        ease: "power2.out",
        scrollTrigger: {
          trigger: ".scroll-wrapper",
          start: () => `${i * 100}vh top`,
          end: () => `${(i + 1) * 100}vh top`,
          scrub: true
        }
      });
    });
  </script>
</body>
</html>
